<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/display_school_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:text="School Name"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:id="@+id/dashboard_mark_attendance"
            android:layout_below="@id/display_school_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/text_mark"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/mark"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:text="Mark Attendance"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_fingerprint_attendance"
            android:layout_below="@id/display_school_text_view"
            android:layout_alignTop="@id/dashboard_mark_attendance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/text_fingerprint"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/dashboard_fingerprint"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:text="Fingerprint Attendance"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_track"
            android:layout_below="@id/dashboard_mark_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/text_track"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/self"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:text="Self Track"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_todo"
            android:layout_below="@id/dashboard_mark_attendance"
            android:layout_alignTop="@id/dashboard_track"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/text_rem"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/todo"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:text="Reminders/ To-Do"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboard_profile"
            android:layout_below="@id/dashboard_track"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/text_profile"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:text="Profile Change"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>